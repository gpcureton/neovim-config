{
    "coc.preferences.formatOnType": false,
    // "coc.preferences.formatOnSaveFiletypes": ["python"],
    // "coc.preferences.formatOnTypeFiletypes": ["python"],

    // python config
    // "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": false,

    // snippets
    "snippets.userSnippetsDirectory": "~/.config/nvim/snips",

    // explorer
    "explorer.width": 30,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.file.column.git.icon.added": "",
    "explorer.file.column.git.icon.modified": "",
    "explorer.file.column.git.icon.deleted": "D",
    "explorer.keyMappings.global": {
        "<cr>": ["expandable?", "expand", "open"],
        "v": "open:vsplit"
   }

    // Vim-Tex
    // "coc.source.vimtex.disableSyntaxes: ["]",   // disabled syntax names                   
    // "coc.source.vimtex.enable": true,      // set to false to disable this source     
    // "coc.source.vimtex.priority": 99,      // priority of source, default 99          
    // "coc.source.vimtex.shortcut": "sfsdf"    // shortcut used in menu of completion item
}
